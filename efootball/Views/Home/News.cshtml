@{
    ViewData["Title"] = "News Page";
}
@model IndexViewModel

 <div class="container-fluid bg-primary py-5 bg-header" style="margin-bottom: 90px;">
            <div class="row py-5">
                <div class="col-12 pt-lg-5 mt-lg-5 text-center">
                    <h1 class="display-4 text-white animated zoomIn">Yangiliklar</h1>
                    <a href="https://t.me/uzefootball" class="h5 text-white">Telegram</a>
                    <i class="far fa-circle text-white px-2"></i>
                    <a href="https://instagram.com/pesuztime" class="h5 text-white">Instagram</a>
                </div>
            </div>
 </div>

 <div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
     <div class="container py-5">
         <div class="row g-5">
             <div class="col-lg-12">
                 <div class="row g-5">
                     @foreach (var news in Model.News)
                        {
                           <div class="col-md-4 wow slideInUp" data-wow-delay="0.1s">
                                <div class="blog-item bg-light rounded overflow-hidden">
                                    <div class="blog-img position-relative overflow-hidden">
                                        <img src="~/images/@news.Images" class="img-fluid" asp-append-version="true" alt="logo" />
                                    </div>
                                    <div class="p-4">
                                        <div class="d-flex mb-3">
                                            <small><i class="far fa-calendar-alt text-primary me-2"></i>@news.CreatedTime</small>
                                        </div>
                                        <h4 class="mb-3">@news.Title</h4>
                                        <p>@news.Body</p>
                                        <a asp-controller="home" asp-action="detail" asp-route-id="@news.Id" class="btn btn-primary"><i class="las la-angle-double-right"></i>
                            Read More</a>
                                    </div>
                                </div>
                            </div>
                        }
                 </div>
             </div>
         </div>
     </div>
 </div>

  

  



